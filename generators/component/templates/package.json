{
  "name": "<%= packageName %>",
  "version": "1.0.0",
  "main": "lib/<%= componentName %>.js",
  "license": "MIT",
  "author": "CA Technologies",
  "description": "CA Technologies React Component",
  "scripts": {
    "lint": "eslint .",
    "flow": "flow check",
    "flow:coverage": "flow-coverage-report -i './src/**/*.js' -t html -t text --threshold 90",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "codecov": "codecov",
    "storybook": "start-storybook -p 9001",
    "storybook:test": "storyshots",
    "storybook:deploy": "storybook-to-ghpages",
    "prebuild": "rimraf ./lib",
    "build": "babel --out-dir ./lib --ignore *.spec.js,*.stories.js ./src",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && npm run flow && npm run test && npm run test:coverage",
    "release": "semantic-release pre && npm publish && storybook-to-ghpages && semantic-release post"
  },
  "dependencies": {
    "ca-ui-react-themer-jss": "^1.0.0",
    "classnames": "^2.2.5"
  },
  "peerDependencies": {
    "react": ">=0.14"
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.34.0",
    "@kadira/storybook-deployer": "^1.2.0",
    "@kadira/storyshots": "^2.0.0",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-ca": "^1.0.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.5.1",
    "eslint": "^3.12.1",
    "eslint-config-ca": "^1.0.0",
    "eslint-loader": "^1.6.1",
    "flow-bin": "^0.37.0",
    "flow-coverage-report": "^0.2.0",
    "husky": "^0.11.9",
    "jest": "^17.0.3",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.8.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.stories.js"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    }
  },
  "keywords": [
    "JS",
    "React",
    "CA Technologies"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CAAPIM/<%= packageName %>.git"
  }
}
