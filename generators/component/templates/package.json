{
  "name": "<%= packageName %>",
  "version": "0.0.0",
  "main": "dist/<%= componentName %>.js",
  "scripts": {
    "lint": "eslint ./src/ --ext .js",
    "flow": "flow",
    "flow:coverage": "flow-coverage-report -i './src/*.js' -t html -t text",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "start-storybook -p 9001",
    "storybook:test": "storyshots",
    "storybook:deploy": "storybook-to-ghpages",
    "prebuild": "rimraf ./dist",
    "build": "babel --out-dir ./dist --ignore *.spec.js,*.stories.js ./src",
    "commit": "git-cz",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {},
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "3.2.4",
    "@kadira/storybook": "2.25.0",
    "@kadira/storybook-deployer": "^1.2.0",
    "@kadira/storyshots": "^2.0.0",
    "babel": "6.5.2",
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-eslint": "7.0.0",
    "babel-loader": "6.2.5",
    "babel-plugin-react-transform": "2.0.2",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "6.16.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-jest": "^16.0.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "classnames": "2.2.5",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.5.1",
    "eslint": "3.8.1",
    "eslint-config-airbnb": "12.0.0",
    "eslint-loader": "1.6.0",
    "eslint-plugin-cssx": "0.3.3",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.4.1",
    "flow-bin": "^0.33.0",
    "flow-coverage-report": "^0.1.0",
    "jest": "^16.0.1",
    "react": "15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "rimraf": "^2.5.4",
    "semantic-release": "^4.3.5"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shanedasilva/<%= packageName %>.git"
  }
}
